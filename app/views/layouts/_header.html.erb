<nav class="topnav group">
  <figure class="topnav-brand">
    <a class="topnav-brand-logo" href="/#">b</a>
  </figure>
  <% if signed_in? %>
    <ul class="topnav-menu-left">
      <li><a href="/#">My Boards</a></li>
    </ul>
  <% end %>
  <ul class="topnav-menu-right">
  <% if signed_in? %>
    <li>
      <button class="navbar-btn btn hvr-radial-out">
        <%= button_to "Sign out", session_url, method: :delete %>
      </button>
    </li>

  <% else %>
    <li>

      <button class="navbar-btn btn hvr-radial-out">
        <%= button_to "Log in", new_session_url, method: :get %>
      </button>
    </li>
    <li>
      <button class="navbar-btn btn hvr-radial-out">
        <%= button_to "Sign up", new_user_url, method: :get %>
      </button>
    </li>
  <% end %>
  </ul>
</nav>

<% if signed_in? %>
  <figure class="new-board">
    <a style="padding: 0;">
      <button class='btn new-board'>
        <figure class="tcon tcon-remove tcon-remove--chevron-right"></figure>
      </button>
    </a>
  </figure>
<% end %>

<% if flash[:errors] %>
<div class="alert alert-warning alert-dismissible" role="alert">
  <%= flash[:errors].join("<br>").html_safe %>
</div>
<% end %>
